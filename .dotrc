# Set the editor to use when editing Dotify dotfiles.
#   Default: 'vim'
#   Options: 'vi', 'vim', 'emacs', '[ANY OTHER TERMINAL BASED EDITOR]'
#

editor: 'vi'

#
# Ignoring files in ~/.dotify when linking:
#
ignore:
    dotify:
        - '.git'
        - '.gitignore'
        - '.gitmodules'
    # Ignoring files in the home directory when linking:
    dotify:
        - '.ssh'
        - '.rbenv'
        - '.rvm'
        - '.bash_history'
        - '.sqlite_history'
        - '.rdebug_hist'
        - '.heroku'
        - '.netrc'
        - '.dropbox'
